@inherits LayoutComponentBase

<div class="page">

    <main>
        <MudAppBar Color="Color.Primary" Fixed="false">
            <MudIconButton Icon="@Icons.Material.Rounded.Person" Color="Color.Inherit" Edge="Edge.Start" />
            <MudSpacer />
            <MudIconButton Icon="@(IsLoggedIn ? Icons.Material.Rounded.Logout : Icons.Material.Rounded.Login)" Color="Color.Inherit" OnClick="OnLoginClick" />
        </MudAppBar>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

@code
{
    [CascadingParameter] public GlobalAppState State { set; get; }
    [Inject] public NavigationManager manager { get; set; }
    public bool IsLoggedIn { set; get; }

    protected override Task OnInitializedAsync()
    {
        IsLoggedIn = State.IsLoggedIn();
        return base.OnInitializedAsync();
    }

    public void OnLoginClick()
    {
        manager.NavigateTo("/Login");
    }

    public void OnProfileClick()
    {
        manager.NavigateTo("/Profile");
    }
}